{{#if isAddMode}}
<div class="add-task {{display}}">
    <div class="task-editor">
        <div class="features-wrap">
        </div>
        <input type="text" class="name-task-input" placeholder="content">
        <input type="text" class="description-task-input" placeholder="Description">

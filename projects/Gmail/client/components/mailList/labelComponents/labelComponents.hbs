<div class="header">

    <div class="text">label as:
    </div>

   <svg xmlns="http://www.w3.org/2000/svg" class="feather close-btn" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" >
   <line x1="18" y1="6" x2="6" y2="18"/>
   <line x1="6" y1="6" x2="18" y2="18"/>
   </svg>

</div>

<div class="lables-list">
    {{#each this}}
    <div class="item" data-id={{this.id}}>

       <div class="square">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-check"><polyline points="20 6 9 17 4 12"></polyline></svg>
        </div>

        <div class="label-name">{{this.name}}
        </div>
    </div>
    {{/each}}
   
</div>

<div class="create-new-lable">

    <div class="text">create new
    </div>

    <div class="apply-wrap hide">

        <svg xmlns="http://www.w3.org/2000/svg" class="feather apply-btn" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" >
        <polyline points="20 6 9 17 4 12"/>
        </svg>

    </div>

    
</div>
{{#if this.contactType}}
    <div class="header">

        <div class="text">פרטי קבוצה 
        </div>

        <svg viewBox="0 0 24 24" width="24" height="24" class="exit-btn">
            <path fill="currentColor" d="M19.1 17.2l-5.3-5.3 5.3-5.3-1.8-1.8-5.3 5.4-5.3-5.3-1.8 1.7 5.3 5.3-5.3 5.3L6.7 19l5.3-5.3 5.3 5.3 1.8-1.8z">

            </path>
        </svg>

    </div>

    <div class="pic-wrap">

        <img class="pic" src="../../assests/pp.jfif">

    </div>

    <div class="group-name-wrap">

        <div class="group-name">{{this.contactName}}
        </div>

        <div class="group-contact-num">קבוצה · {{this.groupMembersLength}} משתתפים
        </div>

    </div>

    <div class="group-contact-list">

        {{#each this.groupMembers}}
        
            <div class="item group" data-id={{this.id}}>

                <div class="info-wrap">

                    <div class="name">{{this.name}}
                    </div>

                    <div class="title">{{this.title}}
                    </div>

                </div>

                <div class="picture-wrap">

                <img class="picture" src="../../assests/pp.jfif">

                </div>

            </div>

        {{/each}}

       
    </div>

{{else}}
    <div class="header">

    <div class="text">פרטי איש קשר 
    </div>

    <svg viewBox="0 0 24 24" width="24" height="24" class="exit-btn">
        <path fill="currentColor" d="M19.1 17.2l-5.3-5.3 5.3-5.3-1.8-1.8-5.3 5.4-5.3-5.3-1.8 1.7 5.3 5.3-5.3 5.3L6.7 19l5.3-5.3 5.3 5.3 1.8-1.8z">

        </path>
    </svg>

    </div>

    <div class="pic-wrap">

        <img class="pic" src="../../assests/pp.jfif">

    </div>

    <div class="group-name-wrap">

        <div class="group-name">{{this.contactName}}
        </div>

        <div class="group-contact-num">+972 52-654-3631
        </div>

    </div>

    <div class="group-contact-list">

        <div class="item delete-chat">

                <div class="name">מחיקת צ'אט
                </div>

                <svg viewBox="0 0 24 24" width="24" height="24" class="clear-chat-btn">
                <path fill="currentColor" d="M6 18c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V6H6v12zM19 3h-3.5l-1-1h-5l-1 1H5v2h14V3z">

                </path>
                </svg>
        </div>


    </div>

{{/if}}

